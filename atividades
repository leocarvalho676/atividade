//ATIVIDADE 7
numero=int(input("Digite um número:"))
if(numero%3==0):
    print("{} é divisível por 3".format(numero))
else:
    print("{} não é divisível por 3".format(numero))
if(numero%2==0):
    print("{} é divisível por 2".format(numero))
else:
    print("{} não é divisível por 2".format(numero))
    
